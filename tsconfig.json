{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@admin/*": ["apps/admin/src/*"],
      "@server/*": ["apps/server/src/*"],
      "@lib/common": ["libs/common/src"],
      "@lib/common/*": ["libs/common/src/*"],
      "@lib/upload": ["libs/upload/src"],
      "@lib/upload/*": ["libs/upload/src/*"],
      "@lib/configure": ["libs/configure/src"],
      "@lib/configure/*": ["libs/configure/src/*"],
      "@lib/database": ["libs/database/src"],
      "@lib/database/*": ["libs/database/src/*"],
      "@util/*": ["util/*"]
    }
  }
}
